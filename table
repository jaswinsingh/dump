1.

create table employee_details_table(employee_id int auto_increment primary key,employee_first_name varchar(20),employee_last_name varchar(20),graduation_percentile decimal(5,2));


2.
create table employee_salary_table(employee_id int auto_increment primary key,employee_salary int,employee_code varchar(20));

3.
create table employee_code_table(employee_code varchar(20) primary key,employee_code_name varchar(20),employee_domain varchar(20));

4.
create table code(employee_id int primary key auto_increment,code varchar(20));


